{
  "name": "opencode-manager",
  "version": "0.4.0",
  "description": "Terminal UI for inspecting OpenCode metadata stores.",
  "type": "module",
  "license": "MIT",
  "packageManager": "bun@1.3.2",
  "engines": {
    "bun": ">=1.3.0"
  },
  "bin": {
    "opencode-manager": "src/bin/opencode-manager.ts"
  },
  "files": [
    "src",
    "bun.lock",
    "tsconfig.json",
    "PROJECT-SUMMARY.md",
    "manage_opencode_projects.py",
    "LICENSE"
  ],
  "scripts": {
    "tui": "bun src/tui/index.tsx",
    "dev": "bun --watch src/tui/index.tsx",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "prepublishOnly": "bun run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcrommett/oc-manager.git"
  },
  "bugs": {
    "url": "https://github.com/kcrommett/oc-manager/issues"
  },
  "keywords": [
    "tui",
    "bun",
    "opencode",
    "cli",
    "metadata"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@opentui/core": "^0.1.44",
    "@opentui/react": "^0.1.44",
    "commander": "^12.0.0",
    "fast-fuzzy": "^1.12.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.5",
    "@types/react": "^19.0.0",
    "typescript": "^5.6.3"
  }
}
