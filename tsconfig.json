{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "react"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
